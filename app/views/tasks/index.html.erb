<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Bill</th>
    <th>Location</th>
    <th>Status</th>
    <th>Start</th>
    <th>Labor</th>
    <th>Materials</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.bill_id %></td>
    <td><%= task.location_id %></td>
    <td><%= task.status %></td>
    <td><%= task.start %></td>
    <td><%= task.labor %></td>
    <td><%= task.materials %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


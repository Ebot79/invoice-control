<h1>Listing residents</h1>

<table>
  <tr>
    <th>F name,</th>
    <th>L name,</th>
    <th>Phone1,</th>
    <th>Phone2,</th>
    <th>Email,</th>
    <th>Location</th>
    <th>Photo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @residents.each do |resident| %>
  <tr>
    <td><%= resident.f_name, %></td>
    <td><%= resident.l_name, %></td>
    <td><%= resident.phone1, %></td>
    <td><%= resident.phone2, %></td>
    <td><%= resident.email, %></td>
    <td><%= resident.location_id %></td>
    <td><%= resident.photo %></td>
    <td><%= link_to 'Show', resident %></td>
    <td><%= link_to 'Edit', edit_resident_path(resident) %></td>
    <td><%= link_to 'Destroy', resident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

